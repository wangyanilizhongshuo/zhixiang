page{ 
 width: 100%;
    max-width: 750px;
    min-width: 320px;
    margin: 0 auto;
    font-family: Helvetica Neue,Helvetica,Arial,sans-serif;
    -webkit-text-size-adjust: 100%;
	background: #f7f7f7;
	color: #333;
	font-size: 14px;
}
._li {
    list-style-type: none;
}
._a {
    -webkit-tap-highlight-color:transparent;
    text-decoration: none;
    color: #000;
}
._ul,._ol { list-style: none;}
._img {
    border: 0;
}
.fl {
    float: left;
}
.fr {
    float: right;
}
.clearfix {
    zoom: 1;
}
.tc{ text-align: center}
.infinite-scroll-preloader{margin:.3rem;text-align:center}
.infinite-scroll-preloader .preloader{width:0.65rem;height:0.65rem; margin:0 auto;}
.preloader:after{
        display:block;
        width:100%;
        height:100%;
        content:"";background-image:url(http://webh5.wangjiangwei.top/01-project/03-hzbixin/09-zxyp/01-wx_public_h5/code/img/load.gif);
        background-repeat:no-repeat;
        background-size:100%;
}
/**成功回调页面**/
.success{
    padding-top:1.5rem;
}
.success-box{
    width:100%;
    margin:0 auto;
}
.success-img ._img{
    height:1.5rem;
    width:1.5rem;
}
.success-img,.success-txt{
    text-align: center;
    margin-bottom:0.8rem;
    font-size:0.34rem
}
.success-handle{
    width:60%;
    margin:0 auto;
}
.success-handle ._a{
    width:1.8rem;
    height:0.65rem;
    line-height:0.65rem;
    font-size:0.3rem;
    text-align: center;
    border-radius:0.4rem;
    display: inline-block;
    color: #fff;
    background:#00b8ee;
}

